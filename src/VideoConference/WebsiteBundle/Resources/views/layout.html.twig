<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8" />
<title>{%- block title %}{% endblock -%}</title>
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
{% stylesheets "@home_css"
output='assets/videoconferencewebsite/css/main.css' %}
<link type="text/css" href="{{ asset_url }}" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
{% endstylesheets %} {% block head %}{% endblock %}
</head>

<body>
	<header id="header">
		<nav id="nav">
			<ul>
				{% if is_granted('ROLE_USER')==false %} 
				<li><a href={{
		path("fos_user_security_login") }}>{% trans %}Log In{% endtrans %}</a>
				</li>

				<li><a href={{ path("fos_user_registration_register")
		}}>{% trans %}Register{% endtrans %}</a></li> {% endif %} {% if
				is_granted('ROLE_USER') %} 
				<li><a href={{ path("default_create_room") }}>{% trans %}Create room{%
						endtrans %}</a></li>

				<li><a href={{ path("default_modify_user") }}>{% trans %}Profile{%
						endtrans %}</a></li>
				<li><a href={{ path("default_manage_rooms") }}>{% trans %}Rooms{%
						endtrans %}</a></li> {% endif %} {% if is_granted('ROLE_USER') %}
				<li>{% trans %}Logged in{% endtrans %}: {{app.user.username }} | <a
					href={{
		path("fos_user_security_logout") }}>{% trans %}Log Out{% endtrans %}</a></li>
				{% endif %}
				<li>
					<div>
						<a href={{	path("default_locale",{'_locale':'hu'})}}>HU</a> 
						<span>|</span>
						<a href={{		path("default_locale",{'_locale':'en'})}}>EN</a>
					</div>
				</li>
			</ul>

		</nav>
		{#<div style="margin-left: 4em;"> <a href={{
		path("default_locale",{'_locale':'hu'})}}><img src={{
		asset('Hungary-Flag-icon.png') }}></a> <a href={{
		path("default_locale",{'_locale':'en'})}}><img src={{
		asset('United-Kingdom-flag-icon.png') }}></a> </div> <div> {% if
		is_granted('ROLE_USER') %} <span style="margin-left: 30px">{% trans
		%}Logged in{% endtrans %}:{{app.user.username }} | <a href={{
		path("fos_user_security_logout") }}>{% trans %}Log Out{% endtrans
		%}</a> {% endif %} </div>#}
	</header>
	<div class="wrapper style1">{% block content %} {% endblock %}</div>
<footer id="footer">
<div style="margin-left: 3em">
<i class="fa fa-copyright" style="color:white;"></i>
<a href="http://flickr.com/szrphoto">Robert Szabados</a>
</div>
</footer>
</body>
</html>
