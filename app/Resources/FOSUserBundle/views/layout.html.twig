<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8" />
<title>{% block title %} {% endblock %}</title>
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<link rel="stylesheet"
	href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/ui-darkness/jquery-ui.css" />
<script
	src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
<script>
  $(function() {
    $( "input[type=submit], button" )
      .button();
  });
  </script>
</head>
<style>
body {
	font-family: Roboto, sans-serif;
}

a:link {
	font-style: bold;
	color: white;
	text-decoration: none;
	font-size: 120%;
}

a:visited {
	font-style: bold;
	color: white;
	text-decoration: none;
	font-size: 120%;
}

a:hover {
	color: #8C8C8C;
	text-decoration: none;
	font-style: bold;
	font-size: 120%;
}

a:active {
	font-style: bold;
	color: white;
	text-decoration: none;
	font-size: 120%;
}

label {
	margin-right: 10px
}

input[type="text"] {
	margin-right: 10px
}

input[type="submit"] {
	font-size: 80%;
}

form {
	line-height: 200%;
}
</style>
<body bgcolor="#404040">
	<div id="content" style="color: white; margin: 20px; padding: 20px;">

		<div>
			{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %} {{
			'layout.logged_in_as'|trans({'%username%': app.user.username},
			'FOSUserBundle') }} | <a
				href="{{ path('fos_user_security_logout') }}"> {{
				'layout.logout'|trans({}, 'FOSUserBundle') }} </a> <span>|</span>
				 <a href="/">Home</a>{% else %} <a
				href="{{ path('fos_user_security_login') }}">{{
				'layout.login'|trans({}, 'FOSUserBundle') }}</a> {% endif %}
		</div>

		{% for type, messages in app.session.flashBag.all %} {% for message in
		messages %}
		<div class="{{ type }}">{{ message|trans({}, 'FOSUserBundle') }}</div>
		{% endfor %} {% endfor %}

		<div>{% block fos_user_content %} {% endblock fos_user_content %}</div>

	</div>
</body>
</html>
